{
  "name": "solid",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "prisma migrate deploy && node dist/index.js",
    "setup": "ts-node src/application/config/Setup/index.ts",
    "migration:run": "prisma migrate deploy",
    "seed": "prisma db seed",
    "dev": "npx nodemon --watch 'src/' --exec 'ts-node -r ./src/index.ts' -e ts",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "dev:prisma:studio": "npm run dev:compose -- run solid-development npm run dev:load-envs prisma studio",
    "dev:migration:run": "npm run dev:compose -- run solid-development npm run dev:load-envs prisma migrate dev",
    "dev:load-envs": "dotenv -e .env.development",
    "dev:compose": "docker-compose -f docker-compose.development.yml --env-file .env.development",
    "dev:compose:build": "npm run dev:compose -- build",
    "dev:docker": "npm run dev:compose -- up",
    "dev:docker:down": "npm run dev:compose -- down",
    "test": "jest --passWithNoTests --noStackTrace -i",
    "test:int": "jest --passWithNoTests --noStackTrace -i --coverage --testPathPattern=integration",
    "test:unit": "jest --passWithNoTests --noStackTrace -i --coverage --testPathPattern=unit",
    "test:int:watch": "npm run test:int -- --watch",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:migration:run": "npm run test:load-envs prisma migrate deploy",
    "test:load-envs": "dotenv -e .env.test",
    "test:compose": "docker-compose -f docker-compose.test.yml --env-file .env.test",
    "test:compose:build": "npm run test:compose -- build",
    "test:docker": "npm run test:compose -- up",
    "test:docker:down": "npm run test:compose -- down",
    "ci:build": "docker-compose -f docker-compose.test.yml build",
    "ci:test": "docker-compose -f docker-compose.test.yml run solid-test bash -c 'npm run test:migration:run && npm test'"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/amqplib": "^0.8.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "27.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/sqlstring": "^2.3.0",
    "@types/supertest": "^2.0.12",
    "@types/uuidv4": "^5.0.0",
    "jest": "^26.6.3",
    "prisma": "^4.0.0",
    "supertest": "^6.2.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "amqplib": "^0.10.2",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^5.1.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.7",
    "nodemailer": "^6.7.5",
    "sqlstring": "^2.3.3",
    "uuidv4": "^6.2.13"
  }
}
